{% extends "@FOSUser/layout.html.twig" %}
{% block title %}Perfil{% endblock %}
{% block fos_user_content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('incio') }}">Incio</a></li>
            <li class="breadcrumb-item">Perfil</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-sm-12 col-md-6 mb-2">
            <img src="{{ asset(app.user.fotografia is null ? 'build/images/user.png' : 'subidas/fotos/profesores/' ~ app.user.fotografia) }}" class="rounded mx-auto d-block foto-perfil">
        </div>
        <ul class="list-group col-sm-12 col-md-6 mb-2">
            <li class="list-group-item text-light mb-0 bg-primary font-weight-bold text-uppercase text-center"><h3 class="font-weight-bold"><i class="fas fa-info-circle"></i> Datos Personales</h3></li>
            <li class="list-group-item"><span class="font-weight-bold">NIF:</span> {{ app.user.nif }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Nombre:</span> {{ app.user.nombre }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Apellidos:</span> {{ app.user.apellido1 }} {{ app.user.apellido2 }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Usuario:</span> {{ app.user.username }}
                {% if "ROLE_ADMIN" in app.user.roles %}
                    (Dirección)
                {% else %}
                    (Profesor)
                {% endif %}
            </li>
        </ul>
        <ul class="list-group col-sm-12 col-md-12 mt-2">
            <li class="list-group-item text-light mb-0 bg-warning font-weight-bold text-uppercase text-center"><h3 class="font-weight-bold"><i class="fas fa-address-card"></i> Contacto</h3></li>
            <li class="list-group-item"><span class="font-weight-bold">Móvil:</span> {{ app.user.movil }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Tlf. Fijo:</span> {{ app.user.fijo|default('label.nodata'|trans) }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Correo:</span> {{ app.user.email }}</li>
        </ul>
        <ul class="list-group col-sm-12 mt-2">
            <li class="list-group-item text-light mb-0 bg-info font-weight-bold text-uppercase text-center"><h3 class="font-weight-bold"><i class="fas fa-book"></i> Fct</h3></li>
            <li class="list-group-item"><span class="font-weight-bold">FCT: </span></li>
        </ul>
    </div>
{% endblock fos_user_content %}
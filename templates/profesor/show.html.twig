{% extends 'base.html.twig' %}
{% block title %}Ver - Profesores{% endblock %}
{% block container %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="{{ path('incio') }}">Incio</a></li>
            <li class="breadcrumb-item"><a href="{{ path('profesores') }}">Profesores</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ver</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-sm-12 col-md-6 mb-2">
            <img src="{{ asset(profesor.fotografia is null ? 'build/images/user.png' : 'subidas/fotos/profesores/' ~ profesor.fotografia) }}" class="rounded mx-auto d-block foto-perfil">
        </div>
        <ul class="list-group col-sm-12 col-md-6 mb-2">
            <li class="list-group-item text-light mb-0 bg-primary font-weight-bold text-uppercase text-center"><h3 class="font-weight-bold"><i class="fas fa-info-circle"></i> Datos Personales</h3></li>
            <li class="list-group-item"><span class="font-weight-bold">NIF:</span> {{ profesor.nif }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Nombre:</span> {{ profesor.nombre }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Apellidos:</span> {{ profesor.apellido1 }} {{ profesor.apellido2 }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Usuario:</span> {{ profesor.username }}</li>
        </ul>
        <ul class="list-group col-sm-12 col-md-12 mt-2">
            <li class="list-group-item text-light mb-0 bg-warning font-weight-bold text-uppercase text-center"><h3 class="font-weight-bold"><i class="fas fa-address-card"></i> Contacto</h3></li>
            <li class="list-group-item"><span class="font-weight-bold">MÃ³vil:</span> {{ profesor.movil }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Tlf. Fijo:</span> {{ profesor.fijo|default('label.nodata'|trans) }}</li>
            <li class="list-group-item"><span class="font-weight-bold">Correo:</span> {{ profesor.email }}</li>
        </ul>
        <ul class="list-group col-sm-12 mt-2">
            <li class="list-group-item text-light mb-0 bg-info font-weight-bold text-uppercase text-center"><h3 class="font-weight-bold"><i class="fas fa-book"></i> Fct</h3></li>
            <li class="list-group-item"><span class="font-weight-bold">FCT: </span></li>
        </ul>
    </div>
{% endblock %}